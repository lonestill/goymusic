{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "ytm-remote",
    "description": "Allow YTM webview to use Tauri events",
    "windows": [
        "ytm-login"
    ],
    "remote": {
        "urls": [
            "https://music.youtube.com/*",
            "https://accounts.google.com/*"
        ]
    },
    "permissions": [
        "core:default",
        "core:event:default",
        "core:event:allow-emit",
        "core:event:allow-listen"
    ]
}